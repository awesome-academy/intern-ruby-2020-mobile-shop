<%= render "admins/shared/error_messages", object: @product %>
<%= form_for [:admins, @product] do |f| %>
  <div class="form-group row">
    <%= f.label :name, t(".name"), class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: t(".placeholder_name") %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :category, t(".category"), class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= f.select "category_id", options_from_collection_for_select(@categories, "id", "name", selected: @product.category_id), {include_blank: t(".choose_category")}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :brand, t(".show.brand"), class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= f.select :brand_id, options_from_collection_for_select(@brands, "id", "name", selected: @product.brand_id), {include_blank: t(".choose_brand")}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :amount, t(".amount"), class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= f.number_field :amount, class: "form-control", placeholder: t(".placeholder_amount") %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :price, t(".price"), class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= f.number_field :price, class: "form-control", placeholder: t(".placeholder_price") %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, t(".description"), class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", rows: "10", placeholder: t(".placeholder_description") %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :images, t(".images"), class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <div class="images">
        <%= f.fields_for :images do |image| %>
          <%= render "admins/products/image_fields", f: image %>
        <% end %>
        <div class="links">
          <%= link_to_add_association t(".add_image"), f, :images %>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :status, t(".status"), class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
      <%= f.check_box :status, {class: "form-check-input ml-0" }, "active", "unactive" %>
    </div>
  </div>
  <div class="row">
    <div class="col d-flex justify-content-end">
      <button type="submit" class="btn btn-success"><%= t ".save" %></button>
    </div>
  </div>
  <br>
<% end %>
