<!DOCTYPE html>
<html>
  <head>
    <title>MobileShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
  </head>
  <body>
    <%= render "layouts/header" %>
    <div class="toast custom-toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="2000">
      <div class="toast-body">
        <%= t ".updated_cart" %>
      </div>
    </div>

    <% flash.each do |message_type, message| %>
      <div id="alert-message" class="alert alert-<%= message_type %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    <%= yield %>
    <%= render "layouts/footer" %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>
  </body>
</html>
