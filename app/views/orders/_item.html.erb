<div class="row">
  <div class="col-lg-12">
    <div class="shoping__cart__table border-order p-1r">
      <table>
        <thead>
        <tr>
          <th class="shoping__product">
            <%= t ".order" %>
            <span class="opacity-5 fs-14">#<%= order.code %></span>
          </th>
          <th><%= t ".total_amount" %></th>
          <th><%= t ".quantity" %></th>
          <td>
            <span class="opacity-5 fs-14">
              <%= t ".#{order.status}" %>
            </span>
            <br/>
            <span class="opacity-5 fs-14">
              <%= t ".created_at" %><%= order.created_at.strftime("%d/%m/%Y") %>
            </span>
          </td>
          <td>
            <% if order.pending_status? %>
              <%= button_to t(".remove"), {action: "destroy", id: order.id},
                            method: :delete, data: {confirm: t(".you_sure?")}, class: "btn btn-warning btn-sm" %>
            <% end %>
          </td>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <%= render partial: "orders/order_item", collection: order.order_items, as: :order_item %>
        </tbody>
      </table>
    </div>
  </div>
</div>
