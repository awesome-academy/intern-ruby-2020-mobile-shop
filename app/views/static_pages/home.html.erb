                </div>
                <div class="latest-product__item__text">
                  <h6><%= product.name %></h6>
                  <span>$<%= product.price %></span>
                </div>
              </a>
              <% if index % 3 == 2 || index == @products[:tablet].length - 1 %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-6">
        <div class="latest-product__text">
          <h4><%= t "static_pages.home.cheapest_laptop" %></h4>
          <div class="latest-product__slider owl-carousel">
            <% @products[:laptop].each_with_index do |product, index| %>
              <% if index % 3 == 0 %>
                <div class="latest-prdouct__slider__item">
              <% end %>
              <a href="#" class="latest-product__item">
                <div class="latest-product__item__pic col-sm-6">
                  <%= image_tag(product.images.first.url) %>
                </div>
                <div class="latest-product__item__text">
                  <h6><%= product.name %></h6>
                  <span>$<%= product.price %></span>
                </div>
              </a>
              <% if index % 3 == 2 || index == @products[:laptop].length - 1 %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Latest Product Section End -->
