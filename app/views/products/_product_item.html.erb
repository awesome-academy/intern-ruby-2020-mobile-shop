<!-- Product Details Section Begin -->
<section class="product-details spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-6">
        <div class="product__details__pic">
          <div class="product__details__pic__item">
            <%= image_tag @product.images.first.url, class: "product__details__pic__item--large" %>
          </div>
          <div class="product__details__pic__slider owl-carousel">
            <% @product.images.each do |image| %>
              <%= image_tag image.url, data: { imgbigurl: image.url } %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-6">
        <div class="product__details__text">
          <h3><%= @product.name %></h3>
          <div class="product__details__price"><%= number_to_currency(@product.price) %></div>
          <p><%= @product.description %></p>
          <%= link_to "#", class: "primary-btn add-cart", data: { "product-id": @product.id } do %>
            <%= t "products.show.add_to_cart" %>
          <% end %>
          <ul>
            <li><b><%= t "products.show.avaiable" %></b> <span><%= @product.amount %></span></li>
          </ul>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="product__details__tab">
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
              <%= link_to "#tabs-1", class:"nav-link active", data: { toggle: "tab", role: "tab"}, aria: {selected: true} do %>
                <%= t "products.show.description" %>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "#tabs-3", class:"nav-link", data: { toggle: "tab", role: "tab"}, aria: {selected: false} do %>
                <%= t "products.show.reviews" %> <span>(1)</span>
              <% end %>
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tabs-1" role="tabpanel">
              <div class="product__details__tab__desc">
                <h6><%= t "products.show.description" %></h6>
                <%= @product.description %>
              </div>
            </div>
            <div class="tab-pane" id="tabs-3" role="tabpanel">
              <div class="product__details__tab__desc">
                <h6><%= t "products.show.reviews" %></h6>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Product Details Section End -->
